*
    margin 0
    box-sizing border-box

    font-family 'Open Sans'
    outline-color $navbarButtonOutlineColor

html
    height 100%

body
    min-height 100%
    width 100%

    display flex
    flex-direction column
    justify-content flex-start
    align-content stretch

    background-color $backgroundColor

h1
    font-size 2.5em

h2
    margin-bottom 1.0em
    font-size 2.0em

hr
    margin 2.0em 0
    outline-color $disabledButtonColor

p, label
    margin-bottom 1.0em
    font-size 1.5em

.line
    display flex
    flex-direction row
    align-items center

.floatLeft
    float left

select
    font-size 1.0em
    font-family 'Open Sans'
    border 1px solid $navbarBackgroundColor

input[type=checkbox]
    margin 0.25em
    display inline-block

    height 1.25em
    width 1.25em

input[type=radio]
    margin 0.1em 0.75em
    display inline-block

    height 1.25em
    width 1.25em

input[type=button]
    background-color $backgroundColor

    cursor pointer
    border 1px solid $navbarBackgroundColor
    border-radius 2px