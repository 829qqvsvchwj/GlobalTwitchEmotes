{
    "manifest_version": 2,

    "applications": {
        "gecko": {
            "id": "gte@melalawi.com",
            "strict_min_version": "50.0",
            "strict_max_version": "50.*"
        }
    },

    "name": "Global Twitch Emotes",
    "short_name": "GTE",
    "description": "Twitch culture wherever you go! This extension replaces all Twitch.tv emote phrases with their actual emoticons.",
    "version": "1.2.1000",

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": true
    },

    "icons": {
        "16": "logo/16.png",
        "32": "logo/32.png",
        "48": "logo/48.png",
        "64": "logo/64.png",
        "80": "logo/80.png",
        "128": "logo/128.png"
    },

    "permissions": [
        "activeTab",
        "http://*/",
        "https://*/",
        "storage",
        "tabs",
        "unlimitedStorage"
    ]
}
