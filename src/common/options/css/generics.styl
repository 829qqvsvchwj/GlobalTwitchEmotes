*
    margin 0
    box-sizing border-box

    font-family 'Segoe UI', Tahoma, sans-serif
    outline-color $navbarButtonOutlineColor

html
    height 100%

body
    min-height 100%
    width 100%

    display flex
    flex-direction column
    justify-content flex-start
    align-content stretch

    font-size 75%

    background-color $backgroundColor

h1
    display inline
    font-size 2.5em

h2
    margin-bottom 1.0em
    font-size 2.0em

h3
    margin-bottom 0.8em
    font-size 1.75em

strong
    margin 1.0em 0

    display flex
    flex-direction row
    align-items center

    font-size 2.0em

hr
    margin 2.0em 0
    outline-color $disabledButtonColor

p, label
    margin-bottom 1.0em
    font-size 1.5em

p.condensed
    font-size 1.25em
    margin-bottom 0.25em

.inline
    display inline-flex
    flex-direction row
    align-items center

.line
    display flex
    flex-direction row
    align-items center

.floatLeft
    float left

a:link, a:active, a:visited, a:hover
    color $navbarButtonActiveColor

select
    font-size 1.0em
    border 1px solid $navbarBackgroundColor

input[type=checkbox]
    margin 0.25em
    display inline-block

    height 1.25em
    width 1.25em

input[type=radio]
    margin 0.1em 0.75em
    display inline-block

    height 1.25em
    width 1.25em

input[type=button]
    background-color $backgroundColor

    cursor pointer
    border 1px solid $navbarBackgroundColor
    border-radius 2px